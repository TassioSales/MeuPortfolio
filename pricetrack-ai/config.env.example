# PriceTrack AI - Configurações de Desenvolvimento

# Configurações do ambiente de desenvolvimento
DEBUG = true
LOG_LEVEL = "DEBUG"
ENABLE_HOT_RELOAD = true

# Configurações de banco de dados
DATABASE_URL = "sqlite:///./pricetrack_ai_dev.db"
RESET_DATABASE_ON_START = false

# Configurações de IA (modo desenvolvimento)
GEMINI_API_KEY = "dev-key-placeholder"
GEMINI_MODEL = "gemini-1.5-pro"
GEMINI_TEMPERATURE = 0.3
GEMINI_MAX_TOKENS = 1024

# Configurações de cache
CACHE_TTL_SECONDS = 300  # 5 minutos em dev
ENABLE_CACHE = true

# Configurações de logging
LOG_TO_FILE = true
LOG_FILE_PATH = "logs/dev.log"
LOG_ROTATION_SIZE = "5MB"
LOG_BACKUP_COUNT = 3

# Configurações de teste
RUN_TESTS_ON_START = false
MOCK_EXTERNAL_APIS = true

# Configurações de performance
MAX_CONCURRENT_REQUESTS = 5
REQUEST_TIMEOUT_SECONDS = 30
ENABLE_METRICS = true

# Configurações de segurança
ENABLE_RATE_LIMITING = false
MAX_REQUESTS_PER_MINUTE = 100
ENABLE_INPUT_VALIDATION = true

# Configurações de notificação
SMTP_ENABLED = false
EMAIL_NOTIFICATIONS = false
PUSH_NOTIFICATIONS = false

# Configurações de analytics
ENABLE_ANALYTICS = false
ANALYTICS_PROVIDER = "none"
TRACK_USER_BEHAVIOR = false

# Configurações de backup
AUTO_BACKUP_ENABLED = false
BACKUP_INTERVAL_HOURS = 24
BACKUP_RETENTION_DAYS = 7
